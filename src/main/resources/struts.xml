<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources"
		value="register.RegisterAction" />
	<package name="basicstruts2" extends="struts-default">
		<!-- login -->
		<action name="loginInput">
			<result>/admin/login.jsp</result>
		</action>
		<action name="">
			<result>/admin/login.jsp</result>
		</action>
		<action name="login" class="action.AuthenticationAction"
			method="execute">
			<result name="success">/admin/shop.jsp</result>
			<result name="input">/admin/login.jsp</result>
		</action>
		<!-- index -->
		<action name="index">
			<result>/admin/shop.jsp</result>
		</action>
		<!-- product -->
		<action name="productInput">
			<result>/admin/product.jsp</result>
		</action>
	</package>
</struts>